<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>登陆</title>
</head>
<body>
<h1>登陆</h1>
<form>
    姓名：<input type="text" id="name"/><br/>
    密码：<input type="password" id="password"><br/>
    <input type="button" id="bt" value="登录">
</form>
</body>
<script type="text/javascript" src="jquery-3.1.1.min.js"></script>
<script>
    $("#bt").click(function(){
        $.post("/dlogin",{
            "name":$("#name").val(),
            "password":$("#password").val()
        },function(result){
            if(result == "1"){
                alert("登录成功");
            }else  if(result == "-1"){
                alert("账号没有注册");
            }else if(result == "2"){
                alert("密码错误");
            }
        });
    });
</script>
</html>